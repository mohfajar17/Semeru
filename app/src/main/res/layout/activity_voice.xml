<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mountains_bg"
    tools:context=".VoiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/imageViewSemeru"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/semeru_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Voice -"
                android:textSize="20dp"
                android:textColor="@color/colorDarkGray"
                android:gravity="center"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablelayoutid"
                android:layout_marginTop="10dp">

                <TableRow
                    android:id="@+id/rowlay"
                    android:background="@color/colorDarkGray"
                    android:divider="@drawable/divider_horizontal_light"
                    android:showDividers="middle"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="TOTAL REGIS" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="KEBALEN" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="RUNGKT" />
                </TableRow>

                <TableRow
                    android:background="@color/colorWhite"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/totalKblRkt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorGray"
                        android:text="-" />
                    <TextView
                        android:id="@+id/totalKbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorGray"
                        android:text="-" />
                    <TextView
                        android:id="@+id/totalRkt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorGray"
                        android:text="-" />
                </TableRow>

                <TableRow
                    android:background="@color/colorDarkGray"
                    android:showDividers="middle"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="Threshold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="800000" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/textViewThRkt"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="10000" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>